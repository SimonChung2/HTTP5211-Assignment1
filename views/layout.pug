block variables 
doctype html 
hmtl 
    head 
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width")
        link(rel="stylesheet", href="/css/styles.css")
        title #{title} | DragonFarm
    body 
        header#header 
            .header-content 
                img#logo(src="/images/logo.jpg")
                nav#main-nav 
                    ul 
                        each link in menu 
                            li 
                                a(href=link.path) #{link.name}
        main#main 
            block layout-content 
        footer#footer 
